        {
            "name": "bufconn-test",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/example/cmd/bufconn-test",
            "env": {
                "APPLICATION_ENVIRONMENT":"Development",
                "MODE":"ddd",
                "EXAMPLE__PORT": "1111",
                //"OIDC_CONFIG__AUTHORITY": "https://some.oidc.authority/",
                "ENABLE_TRANSIENT_2": "false"               
            }
        },
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/example/cmd/server",
            "env": {
                "APPLICATION_ENVIRONMENT":"Development",
                "MODE":"ddd",
                "EXAMPLE__PORT": "1111",
                //"OIDC_CONFIG__AUTHORITY": "https://some.oidc.authority/",
                "ENABLE_TRANSIENT_2": "false",
                "LOG_LEVEL": "debug",
                "ENABLE_GRPC_SERVER_REFLECTION": "true"               
            },
            "args": ["serve", "-e=EXAMPLE__PORT=6111" ]
        },
        {
            "name": "Client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/example/cmd/client",
            "env": {
